<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:m="urn:import:gwt.material.design.client.ui"
    xmlns:ma="urn:import:gwt.material.design.addins.client">
    
    <ui:import field="br.eng.eliseu.gwt.material.client.place.NameTokens.RACHA_SOCIAL"/>

    <g:HTMLPanel>
<!--                <a href="#{RACHA_SOCIAL}">teste</a> -->
            
            <ma:masonry.MaterialMasonry backgroundColor="BLACK" width="98%" flexAlignSelf="CENTER">
            
               <m:MaterialColumn grid="l6 s12 m6" padding="4" >
                    <m:MaterialCard ui:field="rachaSocialCard" marginBottom="0" marginTop="0" backgroundColor="BLUE_DARKEN_1" height="200px" waves="DEFAULT" width="100%">
                        <m:MaterialCardContent>
                            <m:MaterialRow marginBottom="30">
                                <m:MaterialLabel text="Divide as Compras da Sociais" fontSize="1.2em" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="SHOPPING_CART" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="Divide o valor das compras de eventos sociais, onde varias pessoas fizeram compras." fontSize="0.8em" textColor="WHITE"/>
                            <m:MaterialLabel text="Demostras quanto cada um tem que pagar e quando for o caso, quanto deve ser restituido " fontSize="0.8em" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
                </m:MaterialColumn>
            
	            <m:MaterialColumn grid="l6 s12 m6" padding="4" >
                    <m:MaterialCard marginBottom="0" marginTop="0" backgroundColor="BLUE_DARKEN_3" height="200px" waves="DEFAULT" width="100%">
                        <m:MaterialCardContent >
                            <m:MaterialRow marginBottom="30">
                                <m:MaterialLabel text="Racha a Conta do Restaurante" fontSize="1.2em" textColor="WHITE" grid="l9 s9 m9" truncate="true"/>
                                <m:MaterialIcon iconType="LOCAL_DINING" textAlign="RIGHT" iconColor="WHITE" grid="l3 s3 m3" />
                            </m:MaterialRow>
                            <m:MaterialLabel text="Divide o valor de uma conta de restaurante agrupando os itens consumidos." fontSize="0.8em" textColor="WHITE"/>
                            <m:MaterialLabel text="Cada individuo pagante define seu grupo e as despesas sao atribuidas ao seu grupo." fontSize="0.8em" textColor="WHITE"/>
                            <m:MaterialLabel text="Valores que sao comuns sao divididos por grupos ou por individuos." fontSize="0.8em" textColor="WHITE"/>
                        </m:MaterialCardContent>
                    </m:MaterialCard>
	    		</m:MaterialColumn>
	    		
			 
			 </ma:masonry.MaterialMasonry>
    </g:HTMLPanel>
</ui:UiBinder>
